.home
  width 100%
  height 100%
  background-color $color-grey-dark

  &__titles
    color $color-white
    margin 3vh 3vw
    padding 16px 20px

    h1
      color $color-white

    h2
      color $color-grey-light

  &__overlay
    position absolute
    display flex
    top 0
    width 100%
    height 100%

  &__overlay-container
    position relative
    min-width 100%
    min-height 100%
    background-color black
    opacity 0.8
    z-index 4

  &__overlay-content
    display inline-block
    text-align center
    color white
    center-xy()

    .nav-indicator
      font-family "PT Sans"
      text-transform uppercase
      font-size 1.5em
      margin-top 50px

    .nav-indicator-icon
      background url('/images/icons/icon-scroll.svg')
      width 22px
      height 59px
      margin 20px auto 0 auto
