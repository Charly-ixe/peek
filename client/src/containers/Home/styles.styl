body
  overflow-y hidden


.home
  width auto
  height 100%
  background-color $color-grey-dark
  // overflow-x auto
  // overflow-y hidden
  overflow hidden
  white-space nowrap

  &__titles
    position fixed
    color $color-white
    margin 3vh 3vw
    padding 16px 20px
    // position relative
    z-index 4

    h1
      color $color-white

    h2
      color $color-grey-light

  &__filter
    font-family "PT Sans"
    margin 16vh 3vw
    padding 16px 20px
    position fixed
    z-index 4
    width 210px

    .filter-icon
      background url('/images/icons/icon-parcours.svg')
      width 30px
      height 30px
      float left

    .filter-title
      font-size 1.2em
      color $color-grey-light
      margin-left 40px

    .filter-name
      font-size 1.3em
      font-weight bold
      color $color-yellow-peek
      text-transform uppercase
      margin-left 40px
      margin-top 6px
      letter-spacing 0.2em
  &__bg-name
    center-xy()
    position fixed
    font-family "Berlingske"
    font-size 10em
    color $color-grey-bg
    z-index 2

  &__peeks-container
    center-y()
    left 75%
    z-index 3
    &__peeks-scroll-container
      overflow-y hidden
    .peek-container
      // width 300px
      display inline-block
      position relative
      padding 0 60px
      .peek-image
        width 300px
        cursor pointer
      .peek-container-name
        opacity 1
        width 269px
        font-family "Berlingske"
        color white
        font-size 23pt
        margin-top 5px
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        transition $transition-ui
      .peek-logo
        opacity 1
        background url('/images/icons/icon-peek-on.svg')
        width 30px
        height 30px
        margin-top -40px
        float right
        transition $transition-ui
      .peek-date
        opacity 1
        font-family "PT Sans"
        color $color-grey-light
        font-size 1.3em
        transition $transition-ui
    // &:hover
    //   .peek-container
    //     .peek-container-name
    //       opacity 1
    //     .peek-logo
    //       opacity 1
    //     .peek-date
    //       opacity 1



  &__overlay
    position absolute
    display flex
    top 0
    width 100%
    height 100%

  &__overlay-container
    position fixed
    min-width 100%
    min-height 100%
    background-color black
    opacity 0.8
    z-index 4

  &__overlay-content
    display inline-block
    text-align center
    color white
    center-xy()

    .nav-indicator
      font-family "PT Sans"
      text-transform uppercase
      font-size 1.5em
      margin-top 50px

    .nav-indicator-icon
      background url('/images/icons/icon-scroll.svg')
      width 22px
      height 59px
      margin 20px auto 0 auto

::-webkit-scrollbar
  height 4px
// ::-webkit-scrollbar:hover
//   height 8px

::-webkit-scrollbar-thumb
    background rgba(255,255,255,0.5)
