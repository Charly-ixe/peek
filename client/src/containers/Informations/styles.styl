.informations
  width 100vw
  height 100vh
  background-color $color-grey-dark

  &__wrapper
    width 90vw
    margin-top 15vh
    center-x()
    color $color-white

    img
      width 100%
      margin-bottom 40px

    .informations__yellow-title
      color $color-yellow-peek
      font-size 1.4rem
      font-family 'PT Sans'
      text-transform uppercase
      font-weight 800
      letter-spacing 0.25rem

    h1
      font-size 3.6rem

    p
      color $color-grey-soft
      margin-bottom 40px


@media screen and (max-width: 640px)

  #main-wrapper
    overflow-y auto

    body
      overflow-y auto
