.input
  display block
  width 100%
  border none
  border-bottom 1px solid $color-yellow-peek
  line-height 2.4rem
  background none
  color $color-white

.cta-button
  display block
  padding 16px 20px
  color $color-yellow-peek
  font-size 14px
  cursor pointer
  text-transform uppercase
  transition $transition-ui
  &:before
    content ''
    position absolute
    left 0px
    top 80%
    height 1px
    width 40px
    background-color $color-yellow-peek
    transition $transition-ui
  &:hover
    color $color-white
    &:before
      width 100%

.back-button
  display block
  padding 16px 25px
  color $color-grey-button
  font-size 14px
  cursor pointer
  text-transform uppercase
  transition $transition-ui
  font-family PT Sans
  font-weight bold
  letter-spacing 0.3rem
  &:before
    content ''
    center-y()
    left 0
    height calc(100% - 32px)
    width 15px
    background-image url('/images/icon-arrow-left.svg')
    background-size 11px
    background-position center
    background-repeat no-repeat
    transition $transition-ui
  &:hover
    &:before
      left -0.5rem

.secondary-button
  display block
  padding 16px 0
  color $color-grey-dark
  font-size 14px
  cursor pointer
  text-transform uppercase
  transition $transition-ui
  font-weight bold
  font-size 1.2rem
  letter-spacing 0.25rem
  position relative
  &:after
    content ''
    position absolute
    top 13px
    right -3rem
    height calc(100% - 32px)
    width 20px
    background-image url('/images/icon-arrow-yellow-right.svg')
    background-size 15px
    background-position center
    background-repeat no-repeat
    transition $transition-ui

  &:hover
    &:after
      right -3.5rem
