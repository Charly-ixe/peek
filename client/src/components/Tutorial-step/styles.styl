.tutorial-step
  display block
  margin 0
  width 100%
  height 100%
  transition: all 0.5s ease-out

  &.next-step

    &-enter-active
      opacity 1

    &-leave-active
      opacity 0

  &__title
    color $color-grey-dark
    position absolute
    width 70%
    bottom 15vh
    center-x()

  img
    width 70%
    center-x()
    top 5vh
