.tutorial-step
  display block
  margin-top 15%
  width 100%
  height 100%
  transition: all 0.5s ease-out

  &.next-step

    &-enter-active
      opacity 1

    &-leave-active
      opacity 0

  &__title
    color $color-grey-dark
    width 70%
    center-x()
    h1
      font-size 4rem
  &__index
    color $color-grey-index
    float left
    font-size 3em
    margin-left -46px
    margin-top 37px
    h1
      font-size 2rem
      width 380px

  .video-tuto
    display block
    margin 0 auto
    top 5vh
