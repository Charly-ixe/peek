.subdetails
  display block

  div
    margin-bottom 30px

  .subdetails__text
    p
      line-height 2rem
      margin-bottom 0

  .subdetails__image-container
    width 100%
    margin-top 60px
    img
      width 30%
      margin-left 50%
      transform translate(-50%)
    p
      text-align center
      margin-top 30px

    .subdetails__credits
      margin-top 5px
      font-size 1.4rem

      &.center
        text-align center

  .subdetails__video-container
    width 100%
    margin 60px 0

    video
      width 100%
      &.clickable
        cursor pointer
    .subdetails__credits
      margin-top 5px
      font-size 1.4rem

      &.center
        text-align center

    .subdetails__video-play-button
      position absolute
      center-xy()
      width 50px
      height 50px
      background-image url('/images/icons/icon-lecture-video-morphisme.svg')
      background-size cover
      background-repeat no-repeat
      background-position center
      cursor pointer
      transition $transition-ui

      &.hidden
        opacity 0

  .subdetails__outro
    color $color-grey-button
    margin-top 30px

  .subdetails__link
    color $color-grey-dark
    display inline-block
    font-family PT Sans
    font-size 1.6rem
    font-weight normal
    padding-left 30px
    background-image url('/images/icon-link.svg')
    background-repeat no-repeat
    background-position 0%
    background-size 20px
    margin-right 25px
    cursor pointer

  .subdetails__quote-container
    margin-bottom 60px

    .subdetails__quote
      font-family "Berlingske-Italic"
      font-style italic
      font-size 2.4rem
      letter-spacing 0.4px
      line-height 2.7rem
      text-align center

      &:before
        content ''
        position absolute
        left -6px
        top -10px
        width 30px
        height 22px
        background-image url('/images/icons/icon-guillemets-ouverture.svg')
        background-size cover
        background-repeat no-repeat
        background-position center
        z-index -100

      &:after
        content ''
        position absolute
        right 5px
        bottom 20px
        width 30px
        height 22px
        background-image url('/images/icons/icon-guillemets-fermeture.svg')
        background-size cover
        background-repeat no-repeat
        background-position center
        z-index -100

    .subdetails__credits
      margin-top 20px
      font-size 1.4rem

      &.center
        text-align center
