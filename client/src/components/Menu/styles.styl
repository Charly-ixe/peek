.menu
  display block

  &__button
    position fixed
    float right
    top 5vh
    right 5vh
    z-index 5
    color white
    width 100px
    cursor pointer

    .menu__icon
      background url('/images/icons/icon-burger-menu.svg')
      width 29px
      height 23px
      float right
      transition $transition-ui

    .menu__title
      font-family "PT Sans"
      text-transform uppercase
      position relative
      font-size 1.4em
      font-weight bold
      letter-spacing 0.2em
      float left
      margin-top 4px
      // left -11px

  &__button.opened
    .menu__icon
      background url('/images/icons/icon-fermer-2.svg')
      transition $transition-ui


  &__overlay-menu
    position absolute
    display none
    opacity 0
    top 0
    width 100%
    height 100%
    transition $transition-ui

  &__overlay-menu.opened
    display flex
    transition $transition-ui
    .menu__overlay-menu-container
      display block
      opacity 1


  &__overlay-menu-container
    position fixed
    min-width 100%
    min-height 100%
    background-color black
    opacity 0.9
    z-index 4
    transition $transition-ui

  &__overlay-menu-content
    font-family "Berlingske-ExtraBold"
    display inline-block
    color white
    center-xy()

    .menu__item-container
      padding 20px 0
      // cursor pointer
      color $color-white

    .menu__item-txt
      display inline-block
      margin 0
      cursor pointer
      transition $transition-ui
      &:hover
        opacity 0.8

    .menu__item-arrow
      display inline-block
      top -10px
      position relative
      left 20px
      background url('/images/icons/icon-fleche-1-grand-format.svg')
      width 32px
      height 13px

@media screen and (max-width: 640px)

  .menu__button
    float left
    position relative
    width 50px
    right inherit

    .menu__title
      opacity 0

body.device-mobile
  .menu
    .menu__item-arrow
      display none
    .menu__overlay-menu-content
      width 75%
    .menu__item-txt
      font-size 2.5em
    .menu__overlay-menu-container
      opacity 0.95
      bottom 0
