.infos-zone
  display block
  position fixed
  top 0
  left 0
  width calc(100vw / 3)
  height 100vh
  background-color $color-white
  z-index 20
  overflow scroll

  &__back
    z-index 100
    position fixed
    top 3vh
    left 2vw

  &__content-title
    cursor pointer

  p
    color $color-grey-light

  &__wrapper
    position relative
    margin 8vh 2vw
    float left
    //padding-left 25px

    .infos-zone__navbar-block
      float left
      width 5%
      margin-top 32px

      .infos-zone__navbar
        width 1px
        //height 75vh
        background-color $color-grey-soft
        position relative

        .infos-zone__navbar-item
          width 16px
          height 16px
          border-radius 50%
          border 1px solid $color-grey-soft
          background-color $color-white
          display inline-block
          position relative
          transform translate(-50%)
          //margin-bottom 13vh

          &.first
            width 20px
            height 20px

          div
            width 6px
            height 6px
            background-color $color-grey-soft
            center-xy()
            border-radius 50%
            &.first
              width 10px
              height 10px


          &.active
            border 1px solid $color-yellow-peek

            div
              background-color $color-yellow-peek

    .infos-zone__content-block
      float left
      width 95%
      .infos-zone__title
        color $color-grey-dark

        h1
          display inline-block
          margin-bottom 1vh
          cursor pointer

        img
          width 22px
          margin-left 10px

      .infos-zone__date
        margin-bottom 4vh

      .infos-zone__content
        margin-bottom 30px
        h4
          cursor pointer

      .infos-zone__video
        width 100%
        margin-top 30px

      .infos-zone__outro
        color $color-grey-button
        margin-top 30px

      .infos-zone__link
        color $color-grey-dark
        display inline-block
        font-family PT Sans
        font-size 1.6rem
        font-weight normal
        padding-left 30px
        background-image url('/images/icon-link.svg')
        background-repeat no-repeat
        background-position 0%
        background-size 20px
        margin-right 25px
        cursor pointer
