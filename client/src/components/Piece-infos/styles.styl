.infos-zone
  display block
  position fixed
  top 0
  left 0
  width calc(100vw / 3)
  height 100vh
  background-color $color-white
  z-index 20
  overflow scroll

  &__back
    z-index 100
    position fixed
    top 3vh
    left 2vw

  p
    color $color-grey-light

  &__wrapper
    position relative
    margin 8vh 2vw
    //padding-left 25px

    .infos-zone__title
      color $color-grey-dark


      h1
        display inline-block

      img
        width 22px
        margin-left 10px

    .infos-zone__date
      margin-bottom 6vh

    .infos-zone__content
      margin-bottom 6vh

    .infos-zone__video
      width 100%

    .infos-zone__outro
      color $color-grey-button
      margin-top 30px

    .infos-zone__link
      color $color-grey-dark
      display inline-block
      font-family PT Sans
      font-size 1.6rem
      font-weight normal
      padding-left 30px
      background-image url('/images/icon-link.svg')
      background-repeat no-repeat
      background-position 0%
      background-size 20px
      margin-right 25px
      cursor pointer
