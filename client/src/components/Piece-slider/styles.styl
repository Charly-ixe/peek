.piece-slider
  position absolute
  top 0
  right 0
  width (100vw -(100vw / 3))
  height 100vh
  z-index 20
  //background-color rgba(#2A2929, 0.9)
  transition all 0.4s ease-out
  backface-visibility hidden

  &__overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(#2A2929, 0.98)
    transition all 0.4s ease-out
    &.full
      transform scale(2, 1)

    &.half
      transform scale(0.5, 1)


  img
    center-xy()
    height 80%
    transition all 0.4s ease-out

    &.full
      left: 0
      transform translate3d(0, 31%, 0) scale(2.8)
    &.half
      transform translate3d(45%, -65%, 0) scale(2.8)


  &__fullscreen-button
    position fixed
    top 3vh
    right 2vw
    width 20px
    height 20px
    background-image url('/images/icon-full-screen-off.svg')
    background-repeat no-repeat
    background-size 100%
    background-position center
    cursor pointer

  &__close-button
    position fixed
    top 3vh
    right 2vw
    width 20px
    height 20px
    cursor pointer
    transform: rotate(45deg);
    &:before {
      content: "";
      width: 0.1rem;
      height: 100%;
      center-xy()
      background-color: $color-white;
    }
    &:after {
      content: "";
      height: 0.1rem;
      width: 100%;
      center-xy()
      background-color: $color-white;
    }
