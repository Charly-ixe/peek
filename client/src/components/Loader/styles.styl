.fade-leave-active
  transition $transition-ui
.fade-leave-to
  opacity 0

.loader
  position absolute
  background-color $color-grey-dark
  transition $transition-ui
  z-index 1000
  width 100vw
  height 100vh

  .loader__img
    position relative
    center-xy()
    width 5rem


  .loader__text
    position relative
    margin-top 5rem
    center-xy()
    text-align right
    font-size 2rem
    transition transform 0.3s ease-out
    color $color-white
