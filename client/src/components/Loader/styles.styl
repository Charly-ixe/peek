.fade-leave-active
  transition $transition-ui
.fade-leave-to
  opacity 0

.loader
  position absolute
  background-color $color-grey-dark
  transition $transition-ui
  z-index 1000
  width 100vw
  height 100vh

  .loader__img
    position relative
    center-xy()
    width 12rem

  .loader__bar
    position absolute
    top 65%
    width 25%
    center-x()
    height 2px
    background-color $color-grey-soft

    &-loaded
      background-color $color-white
      width 100%
      height 100%
      position absolute
      left 0
      top 0
      transform scaleX(0)
