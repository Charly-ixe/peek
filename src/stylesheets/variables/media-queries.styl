$media_queries = {
    mobile: "only screen and (max-width: 767px)",
    mobile_landscape: "only screen and (max-width: 767px) and (orientation: landscape)",
    mobile_portrait: "only screen and (max-width: 767px) and (orientation: portrait)",

    tablet: "only screen and (max-width: 1200px)",
    tablet_landscape: "only screen and (min-width: 768px) and (max-width 1024px) and (orientation: landscape)",
    tablet_portrait: "only screen and (max-width: 1024px) and (orientation: portrait)",

    desktop_medium: "only screen and (max-width: 1400px)"
    desktop_large: "only screen and (max-width: 1600px)"
    desktop_large_plus: "only screen and (max-width: 1920px)"
}

breakpoint(breakpoints)
    conditions = ()
    for breakpoint in breakpoints
        push(conditions, $media_queries[breakpoint])
    conditions = join(", ", conditions)
    @media conditions
        {block}
